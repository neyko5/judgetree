<div class="page-header">
  <h1><%= t(:trees_by_country) %> <small>(<%=@total_judge_count%></span> <%= t(:judges) %>)</small></h1>
</div>

<div id="tree"></div>
<% @counts.each do |country| %>
	<a href="/tree/<%= country.alpha2.downcase %>" class="country-tree">
  		<img src="/assets/flags/<%= country.alpha2%>.png">
  		<h2><%=country.name%></h2>
  	</a>
<% end %>