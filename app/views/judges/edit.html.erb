<%=form_for @judge, html: {class: "form-horizontal col-sm-8", role: "form"} do |f|%>
<div class="form-group">
  <%=f.label :name, class: "col-sm-2 control-label"%>
  <div class="col-sm-6">
    <%= f.text_field :name, class: 'form-control' %>
  </div>
</div>
<div class="form-group">
  <%=f.label :dci, class: "col-sm-2 control-label"%>
  <div class="col-sm-6">
    <%= f.text_field :dci,class: 'form-control' %>
  </div>
</div>
<div class="form-group">
  <%=f.label :level, class: "col-sm-2 control-label" %>
  <div class="col-sm-6">
    <%= f.select :level, options_for_select(Judge.levels),{class: 'form-control'} %>
  </div>
</div>
<div class="form-group">
  <%= f.label :father, class: "col-sm-2 control-label" %>
  <div class="col-sm-6">
    <%= f.select :parent_judge_id, options_for_select(@judges.collect{|j| [j.name+" ("+j.level+")", j.id]}),{class: 'form-control', prompt: 'Father'} %>
  </div>
</div>
<div class="form-group">
  <%= f.label :country, class: "col-sm-2 control-label" %>
  <div class="col-sm-6">
    <%= f.select :country, options_for_select(@countries, @judge.country.upcase),{class: 'form-control'} %>
  </div>
</div>
<div class="form-group">
  <%= f.label :country_tree, class: "col-sm-2 control-label" %>
  <div class="col-sm-6">
    <%= f.select :country_tree, options_for_select(@countries, @judge.country_tree.upcase),{class: 'form-control'} %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-6">
    <button type="submit" class="btn btn-primary">Update</button>
  </div>
</div>
<% end %>